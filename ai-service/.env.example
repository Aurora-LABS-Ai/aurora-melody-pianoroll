# Model files (REQUIRED)
MODEL_PATH=./models/melody_model.safetensors
CONFIG_PATH=./models/config.json
VOCAB_PATH=./models/vocab.pkl

# Server settings
HOST=127.0.0.1
PORT=8765

# Device: cuda, cpu, or auto
DEVICE=auto

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

